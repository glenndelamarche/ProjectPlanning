<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.untitledPrototype.controller.Stats" xmlns="sap.m" xmlns:chart="sap.chart" xmlns:data="sap.chart.data">
    <Page title="Stats details" showHeader="true" showFooter="true" showNavButton="false">
        <content>
            <ObjectHeader intro="" title="Highest AVG Score" number="" numberUnit="" numberState="None" titleActive="false" backgroundDesign="Translucent" condensed="false" visible="true">
                <attributes/>
                <statuses/>
                <markers/>
            </ObjectHeader>
            <FlexBox alignItems="End" justifyContent="End">
            	<Text text="Download all evalutations" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" class="sapUiSmallMarginEnd"/>
            	<OverflowToolbarButton text="Download all Evaluations" type="Default" icon="sap-icon://download" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" class="sapUiSmallMarginEnd" press="OnExcelAssets"/>
            </FlexBox>
            <chart:Chart id="highestAvg" width="100%" height="450px" visibleDimensions="__id" visibleMeasures="mea0" chartType="bar" selectionMode="Single" uiConfig="{}" vizProperties="{plotArea:{dataLabel:{visible: true,hideWhenOverlap:true}}}">
	                <chart:dimensions>
	                    <data:Dimension name="__id" label="Users" role="category" textProperty="dim0" value="{Name}"/>
	                </chart:dimensions>
	                <chart:measures>
	                    <data:Measure name="mea0" label="AVG Score" role="axis2" value="{TotScore}"/>
	                </chart:measures>
            </chart:Chart>
            <ObjectHeader intro="" title="Lowest AVG Score" number="" numberUnit="" numberState="None" titleActive="false" backgroundDesign="Translucent" condensed="false" visible="true">
                <attributes/>
                <statuses/>
                <markers/>
            </ObjectHeader>
            <chart:Chart id="lowestAvg" width="100%" height="450px" visibleDimensions="__id" visibleMeasures="mea0" chartType="bar" selectionMode="Single" uiConfig="{}" vizProperties="{plotArea:{dataLabel:{visible: true,hideWhenOverlap:true}}}">
                <chart:dimensions>
                    <data:Dimension name="__id" label="Users" role="category" textProperty="dim0"/>
                </chart:dimensions>
                <chart:measures>
                    <data:Measure name="mea0" label="AVG Score" role="axis2"/>
                </chart:measures>
            </chart:Chart>
        </content>
        <footer>
            <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                <content>
                    <ToolbarSpacer width=""/>
                </content>
            </OverflowToolbar>
        </footer>
        <headerContent/>
    </Page>
</mvc:View>
